---
import Container from '../ui/Container.astro';
import { getTranslations, getLocaleFromPath } from '@/i18n';
import Button from '@/react/ui/Button';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden bg-gradient-to-b from-white to-neutral-50">
  <!-- Background decorative element (bull horns inspired) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <svg
      class="absolute top-20 right-10 w-96 h-96 text-primary-50 opacity-30"
      viewBox="0 0 400 400"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
    >
      <path
        d="M200 50L150 150L200 200L250 150L200 50Z"
        fill="currentColor"
      />
      <path
        d="M100 250C100 280 130 310 150 310C170 310 200 280 200 250"
        stroke="currentColor"
        stroke-width="4"
        stroke-linecap="round"
      />
      <path
        d="M200 250C200 280 230 310 250 310C270 310 300 280 300 250"
        stroke="currentColor"
        stroke-width="4"
        stroke-linecap="round"
      />
    </svg>
  </div>

  <Container>
    <div class="relative z-10 text-center max-w-4xl mx-auto animate-fade-in">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-neutral-900 mb-6 leading-tight">
        {t.hero.title}
      </h1>
      <p class="text-lg sm:text-xl text-neutral-600 mb-10 max-w-2xl mx-auto leading-relaxed">
        {t.hero.subtitle}
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <Button
          client:load
          href={`/${locale}/#contact`}
          variant="primary"
          class="w-full sm:w-auto"
        >
          {t.hero.ctaPrimary}
        </Button>
        <Button
          client:load
          href={`/${locale}/#features`}
          variant="secondary"
          class="w-full sm:w-auto"
        >
          {t.hero.ctaSecondary}
        </Button>
      </div>
    </div>
  </Container>
</section>
