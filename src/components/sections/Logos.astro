---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import { getTranslations, getLocaleFromPath } from '@/i18n';
import banderitaLogo from '@/assets/cropped-banderita-parrilla-logo.png';
import carnicosLogo from '@/assets/carnicos_transparent_cropped.png';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);

const clients = [
  { name: 'Banderita Parrilla', logo: banderitaLogo },
  { name: 'CÃ¡rnicos', logo: carnicosLogo },
];
---

<Section id="logos">
  <Container>
    <div class="text-center mb-12">
      <h2 class="text-2xl sm:text-3xl font-semibold text-neutral-700 mb-8">
        {t.logos.title}
      </h2>
      <div class="flex flex-wrap items-center justify-center gap-12 sm:gap-16 lg:gap-20">
        {clients.map((client) => (
          <div class="flex items-center justify-center h-20 sm:h-24 opacity-70 hover:opacity-100 transition-opacity">
            <img
              src={client.logo.src}
              alt={client.name}
              class="max-h-full max-w-full object-contain"
            />
          </div>
        ))}
      </div>
    </div>
  </Container>
</Section>
