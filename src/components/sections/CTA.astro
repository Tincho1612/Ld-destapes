---
import Container from '../ui/Container.astro';
import Section from '../ui/Section.astro';
import { getTranslations, getLocaleFromPath } from '@/i18n';
import Button from '@/react/ui/Button';
import { WHATSAPP_LINK } from '@/lib/constants';

const locale = getLocaleFromPath(Astro.url.pathname);
const t = getTranslations(locale);
---

<Section id="contact" class="bg-primary-700 text-white">
  <Container>
    <div class="text-center max-w-3xl mx-auto animate-fade-in">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-4">
        {t.cta.title}
      </h2>
      <p class="text-lg sm:text-xl text-primary-100 mb-8">
        {t.cta.subtitle}
      </p>
      <div class="flex flex-col items-center justify-center gap-4">
        <Button
          client:load
          href={WHATSAPP_LINK}
          variant="secondary"
          class="bg-white text-primary-700 hover:bg-primary-50 w-full sm:w-auto"
          target="_blank"
          rel="noopener noreferrer"
        >
          {t.cta.button}
        </Button>
        <a
          href="/urgencias"
          class="px-6 py-3 bg-transparent border-2 border-white text-white rounded-lg hover:bg-white/10 transition-colors font-medium text-sm w-full sm:w-auto text-center"
        >
          Ver información de urgencias →
        </a>
      </div>
    </div>
  </Container>
</Section>
