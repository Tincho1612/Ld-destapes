---
import Header from '@/components/ui/Header.astro';
import Footer from '@/components/ui/Footer.astro';
import SEO from '@/components/ui/SEO.astro';
import StructuredData from '@/components/ui/StructuredData.astro';
import WhatsAppButton from '@/components/ui/WhatsAppButton.astro';
import '@/styles/globals.css';
import { getLocaleFromPath } from '@/i18n';
import logoDestapes from '@/assets/destapes-logo.svg';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
const locale = getLocaleFromPath(Astro.url.pathname);
const path = Astro.url.pathname;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href={logoDestapes.src} />
    <SEO title={title} description={description} image={image} locale={locale} path={path} />
    <StructuredData locale={locale} />
    <!-- Google Fonts - Optimizado con preconnect y display=swap -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Header />
    <main class="pt-16 sm:pt-20">
      <slot />
    </main>
    <Footer />
    <WhatsAppButton />
  </body>
</html>
